{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],
  "rules": {
    "require-await": "error",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "quotes": ["warn", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "semi": ["warn", "always"],
    "no-console": "off",
    "no-unused-vars": "warn",
    "prefer-const": ["warn", { "destructuring": "any", "ignoreReadBeforeAssign": false }],
    "strict": ["error", "global"],
    "no-var": "error"
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}